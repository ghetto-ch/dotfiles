{
	"suggest.autoTrigger": "none",
	"explorer.previewAction.onHover": false,
	"languageserver": {
		"ccls": {
			"command": "ccls",
			"filetypes": [
				"c",
				"cc",
				"cpp",
				"c++",
				"objc",
				"objcpp"
			],
			"rootPatterns": [
				".ccls",
				"compile_commands.json",
				".git/",
				".hg/"
			],
			"initializationOptions": {
				"cache": {
					"directory": "/tmp/ccls"
				}
			}
		},
		"bash": {
			"command": "bash-language-server",
			"args": [
				"start"
			],
			"filetypes": [
				"sh"
			],
			"ignoredRootPaths": [
				"~"
			]
		},
		"golang": {
			"command": "gopls",
			"rootPatterns": [
				"go.mod"
			],
			"disableWorkspaceFolders": true,
			"filetypes": [
				"go"
			]
		}
	}
}
