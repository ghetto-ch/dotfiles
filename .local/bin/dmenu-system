#!/bin/sh

lock() {
    #i3lock -t -i ~/img/lockscreen.png
    slock &
    #sleep 1800
    #systemctl hybrid-sleep
}

x=$(echo -e "lock\nsuspend\nhibernate\nreboot\npoweroff" | dmenu -i)

case "$x" in
    lock)
        lock
        ;;
    suspend)
        lock; systemctl hybrid-sleep #suspend
        ;;
    hibernate)
        lock; systemctl hibernate
        ;;
    reboot)
        systemctl reboot
        ;;
    poweroff)
        systemctl poweroff
        ;;
    *)
        exit 2
esac

exit 0
