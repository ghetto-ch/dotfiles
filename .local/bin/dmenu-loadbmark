#!/bin/sh
sel=`cat ~/.surf/bookmarks | sed 's/\([^ ]*\) *\(.*\)/\2 \1/' | \
    dmenu -p 'Load Bookmark' -i -l 20`
    [ -z "$sel" ] && exit
    opt=$(echo $sel | cut -d ' ' -f 1)
    arg=$(echo $sel | cut -d ' ' -f 2-)
    save=0
    case "$opt" in
        "d") surf-open "https://duckduckgo.com/?q=$arg"
            ;;
        *) surf-open $(echo $sel | awk '{print $NF}')
            ;;
    esac
