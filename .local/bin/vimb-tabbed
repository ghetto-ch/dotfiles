#!/bin/sh

xidfile="$HOME/.config/vimb/tmp/xid"
uri=""

[ "$#" -gt 0 ] && uri="$1"

runtabbed() {
	tabbed -c vimb "$uri" -e > "$xidfile" 2>/dev/null &
}

if [ ! -r "$xidfile" ];
then
	runtabbed
else
	xid=$(cat "$xidfile")
	xprop -id "$xid" >/dev/null 2>&1
	if [ $? -gt 0 ];
	then
		runtabbed
	else
		vimb "$uri" -e "$xid" >/dev/null 2>&1 &
	fi
fi
