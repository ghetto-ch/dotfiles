[user]
	name = ghetto
	email = ghetto.ch@gmail.com
[alias]
	meld = mergetool -t meld
[init]
	templatedir = ~/.git_template
[merge]
	tool = nvimdiff
[mergetool]
	prompt = true
[diff]
	tool = nvimdiff
[difftool]
	prompt = false
[core]
	excludesFile = ~/.gitignore
[pager]
	diff = delta
	log = delta
	reflog = delta
	show = delta
[interactive]
	diffFilter = delta --color-only --features=interactive
[delta]
	features = side-by-side
	syntax-theme = base16
