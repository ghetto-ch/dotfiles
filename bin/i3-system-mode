#!/bin/sh
lock() {
    i3lock -t -i ~/img/lockscreen.png
    #sleep 1800
    #systemctl hybrid-sleep
}

case "$1" in
    lock)
        lock
        ;;
    logout)
        i3-msg exit
        ;;
    suspend)
        lock; systemctl hybrid-sleep #suspend
        ;;
    hibernate)
        lock; systemctl hibernate
        ;;
    reboot)
        systemctl reboot
        ;;
    poweroff)
        systemctl poweroff
        ;;
    *)
        echo "Usage: $0 {lock|logout|suspend|hibernate|reboot|poweroff}"
        exit 2
esac

exit 0
